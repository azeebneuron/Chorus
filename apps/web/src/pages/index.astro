---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ProblemScroll from '../components/ProblemScroll.astro';
import WhatIsChorus from '../components/WhatIsChorus.astro';
import CodeExample from '../components/CodeExample.astro';
import Comparison from '../components/Comparison.astro';
import Features from '../components/Features.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Chorus - Agents that actually work.">
	<main class="relative bg-background overflow-hidden">
		<!-- Background Grid Effect (Optional) -->
		<div class="absolute inset-0 z-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]"></div>
		
		<div class="relative z-10">
			<Hero />
			<ProblemScroll />
			<WhatIsChorus />
			<CodeExample />
			<Comparison />
			<Features />
			<CTA />
		</div>
		<Footer />
	</main>
</Layout>
