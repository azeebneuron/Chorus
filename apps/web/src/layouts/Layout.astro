---
import '@fontsource/inter';
import '@fontsource/jetbrains-mono';
import '../styles/main.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "The TypeScript framework for building agents." } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-background text-foreground antialiased selection:bg-emerald-500/30 min-h-screen" style="background-color: #080808; color: #FAFAFA;">
		<slot />
	</body>
</html>
