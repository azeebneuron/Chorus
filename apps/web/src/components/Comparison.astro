<section class="py-24 bg-surface border-y border-border transition-colors duration-300">
  <div class="mx-auto max-w-5xl px-6">
    <div class="mb-16 flex items-end justify-between border-b border-border pb-4">
      <div>
        <h2 class="text-3xl font-bold text-foreground md:text-4xl font-mono uppercase tracking-tight">System Benchmark</h2>
        <p class="text-muted font-mono text-xs mt-2 tracking-widest">COMPARATIVE ANALYSIS REPORT</p>
      </div>
      <div class="font-mono text-xs text-emerald-600 dark:text-emerald-500 hidden sm:flex items-center gap-2">
        <span class="w-2 h-2 bg-emerald-500"></span>
        STATUS: SUPERIOR
      </div>
    </div>

    <!-- Header Row -->
    <div class="grid grid-cols-3 gap-px bg-border border border-border tracking-wider shadow-lg">
        <div class="bg-background p-4 font-mono text-xs text-muted uppercase flex items-center">Metric</div>
        <div class="bg-background p-4 font-mono text-xs text-muted uppercase flex items-center justify-center">Legacy Frameworks</div>
        <div class="bg-background p-4 font-mono text-xs text-emerald-600 dark:text-emerald-500 font-bold uppercase flex items-center justify-center relative overflow-hidden">
            <div class="absolute inset-0 bg-emerald-500/5"></div>
            <span class="relative">Chorus</span>
        </div>
    </div>

    <!-- Data Rows -->
    <div class="grid grid-cols-3 gap-px bg-border border-x border-b border-border text-sm shadow-lg">

        <!-- Onboarding -->
        <div class="bg-background p-4 text-muted font-mono text-xs sm:text-sm">Documentation Load</div>
        <div class="bg-background p-4 text-muted/70 text-center font-mono text-xs sm:text-sm">100+ Pages</div>
        <div class="bg-background p-4 text-foreground text-center font-bold font-mono text-xs sm:text-sm border-l-2 border-emerald-500 bg-emerald-500/5">10 Minutes</div>

         <!-- Lock-in -->
        <div class="bg-background p-4 text-muted font-mono text-xs sm:text-sm">Vendor Dependency</div>
        <div class="bg-background p-4 text-muted/70 text-center font-mono text-xs sm:text-sm">High (Lock-in)</div>
        <div class="bg-background p-4 text-foreground text-center font-bold font-mono text-xs sm:text-sm border-l-2 border-emerald-500 bg-emerald-500/5">Zero (Agnostic)</div>

         <!-- Flexibility -->
        <div class="bg-background p-4 text-muted font-mono text-xs sm:text-sm">Flexibility</div>
        <div class="bg-background p-4 text-muted/70 text-center font-mono text-xs sm:text-sm">Rigid (Opinionated)</div>
        <div class="bg-background p-4 text-foreground text-center font-bold font-mono text-xs sm:text-sm border-l-2 border-emerald-500 bg-emerald-500/5">Atomic Primitives</div>

         <!-- Debugging -->
        <div class="bg-background p-4 text-muted font-mono text-xs sm:text-sm">Observability</div>
        <div class="bg-background p-4 text-muted/70 text-center font-mono text-xs sm:text-sm">Black Box</div>
        <div class="bg-background p-4 text-foreground text-center font-bold font-mono text-xs sm:text-sm border-l-2 border-emerald-500 bg-emerald-500/5">Full Trace</div>

         <!-- Pricing -->
        <div class="bg-background p-4 text-muted font-mono text-xs sm:text-sm">Cost Model</div>
        <div class="bg-background p-4 text-muted/70 text-center font-mono text-xs sm:text-sm">Enterprise Lic.</div>
        <div class="bg-background p-4 text-foreground text-center font-bold font-mono text-xs sm:text-sm border-l-2 border-emerald-500 bg-emerald-500/5">MIT Open Source</div>

    </div>
  </div>
</section>
